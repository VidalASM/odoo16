<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_company_form_inherit_l10n_pe_credential_invoice_sunat" model="ir.ui.view">
        <field name="name">view.company.form.inherit.l10n_pe_credential_invoice_sunat</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='social_media']" position="after">
                <group string="Validador CPE SUNAT">
                    <field name="l10n_pe_cis_client_id" string="Client ID"/>
                    <field name="l10n_pe_cis_client_secret" string="Client Secret" password="True"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
